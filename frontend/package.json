{
  "name": "aqura-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:pwa": "vite build --mode pwa",
    "build:windows": "npm run build:pwa && npm run package:windows",
    "package:windows": "electron-builder --windows",
    "dev": "vite dev --host",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "i18n:extract": "node scripts/extract-i18n.js",
    "i18n:build": "node scripts/build-i18n.js"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.5",
    "@sveltejs/adapter-vercel": "^5.10.3",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.7.9",
    "@types/xlsx": "^0.0.36",
    "autoprefixer": "^10.4.20",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.44.1",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "svelte": "^5.1.9",
    "svelte-check": "^4.0.4",
    "tailwindcss": "^3.4.13",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vite-plugin-pwa": "^0.20.5",
    "vitest": "^2.1.3",
    "workbox-build": "^7.1.1",
    "workbox-window": "^7.1.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "@sveltejs/adapter-auto": "^6.1.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-svelte": "^0.447.0",
    "openai": "^5.23.2",
    "tailwind-merge": "^2.5.3",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "build": {
    "appId": "com.aqura.app",
    "productName": "Aqura Management System",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "static/icons/icon-512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
